{
  "name": "a2r",
  "version": "0.8.42",
  "description": "A2R Framework",
  "engines": {
    "node": ">=12"
  },
  "main": "./index.js",
  "types": "./index.d.ts",
  "scripts": {
    "build": "tsc",
    "coveralls": "jest --coverage && cat ./coverage/lcov.info | coveralls",
    "dev": "NODE_ENV=development ts-node-dev --debug --respawn --transpileOnly ./index.ts",
    "docs": "jsdoc -c jsdoc.json",
    "lint": "npx eslint --config ./.eslintrc ./**/*.ts",
    "start": "node ./dist/index.js",
    "test": "jest",
    "test-clear": "rm -rf coverage;rm -rf dist",
    "test-dev": "NODE_ENV=development npx jest --watch",
    "test-coverage": "jest --coverage",
    "test-coverage-dev": "NODE_ENV=development jest --coverage --watchAll",
    "test-full": "npm run test-clear;npm run build;npm run test;npm run test-coverage;npm run lint;npm audit;npm run docs",
    "upload": "rm -rf ./dist;npm run build;cp -r ./templates/ ./dist/templates;cd dist;npm i;npm publish --access=public;"
  },
  "bin": {
    "a2r": "./utils/a2r.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/acttoreact/a2r.git"
  },
  "keywords": [
    "acttoreact",
    "a2r"
  ],
  "author": "Act to React (https://a2r.com/)",
  "license": "MIT",
  "homepage": "https://a2r.com/",
  "dependencies": {
    "@a2r/fs": "^1.3.0",
    "@a2r/telemetry": "^1.0.41",
    "axios": "^0.19.2",
    "bcryptjs": "^2.4.3",
    "chalk": "^4.1.0",
    "command-line-args": "^5.1.1",
    "command-line-usage": "^6.1.0",
    "deepmerge": "^4.2.2",
    "express": "^4.17.1",
    "js-cookie": "^2.2.1",
    "js-yaml": "^3.14.0",
    "mongodb": "^3.5.9",
    "next": "^9.5.2",
    "shortid": "^2.2.15",
    "socket.io-client": "^2.3.0",
    "universal-cookie": "^4.0.3"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/command-line-args": "^5.0.0",
    "@types/command-line-usage": "^5.0.1",
    "@types/express": "^4.17.7",
    "@types/jest": "^26.0.7",
    "@types/js-cookie": "^2.2.6",
    "@types/mongodb": "^3.5.25",
    "@types/node": "^14.0.27",
    "@types/rimraf": "^3.0.0",
    "@types/shortid": "0.0.29",
    "@types/socket.io": "^2.1.11",
    "@types/socket.io-client": "^1.4.33",
    "@typescript-eslint/eslint-plugin": "^3.7.1",
    "@typescript-eslint/parser": "^3.7.1",
    "babel-jest": "^26.2.1",
    "better-docs": "^2.3.0",
    "coveralls": "^3.0.11",
    "eslint": "^7.5.0",
    "eslint-config-airbnb": "^18.2.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jsx-a11y": "^6.3.1",
    "eslint-plugin-react": "^7.20.5",
    "jest": "^26.2.1",
    "jsdoc": "^3.6.5",
    "snyk": "^1.369.2",
    "ts-jest": "^26.1.4",
    "ts-node-dev": "^1.0.0-pre.56",
    "typescript": "^3.9.7",
    "wait-for-expect": "^3.0.2"
  }
}
