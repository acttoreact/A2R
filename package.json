{
  "name": "a2r",
  "version": "2.3.0",
  "description": "A2R Framework",
  "engines": {
    "node": ">=12"
  },
  "main": "./index.js",
  "types": "./index.d.ts",
  "scripts": {
    "build": "tsc",
    "coveralls": "jest --coverage && cat ./coverage/lcov.info | coveralls",
    "dev": "NODE_ENV=development ts-node-dev --debug --respawn --transpile-only ./index.ts",
    "dev-help": "NODE_ENV=development ts-node-dev --debug --respawn --transpile-only ./utils/a2r.ts",
    "docs": "jsdoc -c jsdoc.json",
    "lint": "npx eslint --config ./.eslintrc ./**/*.ts",
    "start": "node ./dist/index.js",
    "test": "jest",
    "test-clear": "rm -rf coverage;rm -rf dist",
    "test-dev": "NODE_ENV=development npx jest --watch",
    "test-coverage": "jest --coverage",
    "test-coverage-dev": "NODE_ENV=development jest --coverage --watchAll",
    "test-full": "npm run test-clear;npm run build;npm run test;npm run test-coverage;npm run lint;npm audit;npm run docs",
    "upload": "rm -rf ./dist;npm run build;cp -r ./templates/ ./dist/templates;cd dist;npm i;npm publish --access=public;"
  },
  "bin": {
    "a2r": "./utils/a2r.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/acttoreact/a2r.git"
  },
  "keywords": [
    "acttoreact",
    "a2r"
  ],
  "author": "Act to React (https://a2r.com/)",
  "license": "MIT",
  "homepage": "https://a2r.com/",
  "dependencies": {
    "@a2r/fs": "^1.4.1",
    "@a2r/telemetry": "^1.0.41",
    "axios": "^0.21.1",
    "bcryptjs": "^2.4.3",
    "chalk": "^4.1.0",
    "chokidar": "^3.5.1",
    "command-line-args": "^5.1.1",
    "command-line-commands": "^3.0.2",
    "command-line-usage": "^6.1.1",
    "deepmerge": "^4.2.2",
    "execa": "^5.0.0",
    "express": "^4.17.1",
    "get-port": "^5.1.1",
    "js-cookie": "^2.2.1",
    "js-yaml": "^4.0.0",
    "mongodb": "^3.6.4",
    "shortid": "^2.2.16",
    "socket.io": "3.0.3",
    "socket.io-client": "3.0.3",
    "typescript": "^4.1.5",
    "universal-cookie": "^4.0.4"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/command-line-args": "^5.0.0",
    "@types/command-line-commands": "^2.0.1",
    "@types/command-line-usage": "^5.0.1",
    "@types/express": "^4.17.11",
    "@types/jest": "^26.0.20",
    "@types/js-cookie": "^2.2.6",
    "@types/mongodb": "^3.6.8",
    "@types/node": "^14.14.31",
    "@types/rimraf": "^3.0.0",
    "@types/shortid": "0.0.29",
    "@typescript-eslint/eslint-plugin": "^4.15.1",
    "@typescript-eslint/parser": "^4.15.1",
    "babel-jest": "^26.6.3",
    "better-docs": "^2.3.2",
    "coveralls": "^3.0.11",
    "eslint": "^7.20.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-prettier": "^8.0.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.22.0",
    "jest": "^26.6.3",
    "jsdoc": "^3.6.6",
    "snyk": "^1.458.0",
    "ts-jest": "^26.5.1",
    "ts-node-dev": "^1.1.1",
    "wait-for-expect": "^3.0.2"
  }
}
